    <title>Inventory Management</title>
</head>
<body>

  <% if (loggedInUser === undefined) { %>
    <div class="wrapper fadeInDown">
      <div id="formContent">
        <!-- Tabs Titles -->
        <div class="container-fluid align-content-center"> <h4>Inventory Management System</h4> </div>

        <!-- Login Form -->
        <form method="post" action="/login">
          <input required type="text" id="username" class="fadeIn second" name="username" placeholder="username">
          <input required type="password" id="password" class="fadeIn third" name="password" placeholder="password">
          <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

        <%- include('verification.ejs') %>
        <!-- Remind Passowrd -->
        <div id="formFooter">
          <a class="underlineHover" href="/create">Don't have an account?</a>
        </div>

      </div>
    </div>
  <% } else if (loggedInUser.level === "employee") { %>
    <a class="btn btn-secondary" href="/logout" role="button">
      Logout Employee: <%= loggedInUser.username %>
    </a>

    <%- include('verification.ejs') %>

    <section id="your-items">
      <div class="container-lg">
        <div class="p-lg-2 text-center bg-light">
          <h1>Your Items</h1>
        </div>  
        <table class="table table-hover">
          <tbody>
            <% var x = true; %>
            <% for (item of items) { %>
              <% if (item.owner === loggedInUser.username) { %>
                <% x = false; %>
                <tr>
                  <td scope="row"><img src="/items/<%= item.id %>.jpg" width="100" height="100"></td>
                  <td><%= item.name %></td>
                  <td><a class="btn btn-primary" href=<%= "/return/"+item.id %> role="button">
                    Return <%if (item.alert === "T") { %> ASAP!<% } %>
                  </a></td>
                </tr>
              <% } %>
            <% } %>
            <%if (x) { %>
              <p> You don't have anything checked out </p>
            <% } %>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <section id="available-inventory">
      <div class="container-lg">
        <div class="p-lg-2 text-center bg-light">
          <h1>Available Inventory</h1>
        </div>  
        <table class="table table-hover">
          <tbody>
            <% var x = true; %>
            <% for (item of items) { %>
              <% if (item.owner === "") { %>
                <% x = false; %>
                <tr>
                  <td scope="row"><img src="/items/<%= item.id %>.jpg" width="100" height="100"></td>
                  <td><%= item.name %></td>
                  <td><a class="btn btn-primary" href=<%= "/checkout/"+item.id %> role="button">Chekout</a></td>
                </tr>
              <% } %>
            <% } %>
            <%if (x) { %>
              <p> No available items </p>
            <% } %>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <section id="not-available">
      <div class="container-lg">
        <div class="p-lg-2 text-center bg-light">
          <h1>Not Available</h1>
        </div>  
        <table class="table table-hover">
          <tbody>
            <% var x = true; %>
            <% for (item of items) { %>
              <% if (item.owner !== "" && item.owner !== loggedInUser.username) { %>
                <% x = false; %>
                <tr>
                  <td scope="row"><img src="/items/<%= item.id %>.jpg" width="100" height="100"></td>
                  <td><%= item.name %></td>
                  <td><%= item.owner %> borrowed it</td>
                </tr>
              <% } %>
            <% } %>
            <%if (x) { %>
              <p> Nothing to display </p>
            <% } %>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  <% } else { %>
    <a class="btn btn-secondary" href="/logout" role="button">
      Logout Manager: <%= loggedInUser.username %>
    </a>

    <%- include('verification.ejs') %>

    <section id="manage-inventory">
      <div class="container-lg">
        <div class="p-lg-2 text-center bg-light">
          <h1>Manage Inventory</h1>
        </div>  
        <table class="table table-hover">
          <tbody>
            <% for (item of items) { %>
              <tr>
                <td scope="row"><img src="/items/<%= item.id %>.jpg" width="100" height="100"></td>
                <td><%= item.name %></td>
                <% if (item.owner !== "") { %>
                  <td><a class="btn btn-danger" href=<%= "/alert/"+item.id %> role="button">Alert <%= item.owner %></a></td>
                <% } else { %>
                  <td></td>
                <% } %>
              </tr>
            <% } %>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  <% } %>
